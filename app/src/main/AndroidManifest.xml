<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.orkunsoylu.bringit">

    <uses-sdk tools:overrideLibrary="com.firebase.ui,com.firebase.ui.auth" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.example.orkunsoylu.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.orkunsoylu.SignUpActivity" />
        <activity android:name="com.example.orkunsoylu.MainActivity" />
        <activity android:name="com.example.orkunsoylu.WishActivity"></activity>
    </application>

</manifest>