<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.orkunsoylu.ProfileFragment">

    <include
        android:id="@+id/profileRow2Wish1"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/profileRow1Wish1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileRow1Wish1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/profileRow3Wish1" />

    <include
        android:id="@+id/profileRow3Wish2"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/profileRow3Wish3"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/profileRow3Wish1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/profileRow3Wish3"
        android:layout_marginRight="8dp" />

    <include
        android:id="@+id/profileRow2Wish3"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/profileRow1Wish3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileRow1Wish3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/profileRow3Wish3" />

    <include
        android:id="@+id/profileRow3Wish3"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/profileRow1Wish3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/profileSeeButton" />

    <include
        android:id="@+id/profileRow1Wish1"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileAllWishLabel" />

    <include
        android:id="@+id/profileRow2Wish2"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileRow1Wish2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/profileRow3Wish2"
        app:layout_constraintLeft_toRightOf="@+id/profileRow2Wish1"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.486"
        app:layout_constraintRight_toLeftOf="@+id/profileRow2Wish3"
        android:layout_marginRight="8dp" />

    <include
        android:id="@+id/profileRow1Wish3"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileRow1Wish1"
        android:layout_marginTop="0dp" />

    <include
        android:id="@+id/profileRow1Wish2"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/profileRow1Wish1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/profileRow1Wish3"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/profileRow1Wish1"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.666" />

    <include
        android:id="@+id/profileRow3Wish1"
        layout="@layout/preview_wish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/profileRow1Wish1"
        app:layout_constraintBottom_toBottomOf="@+id/profileRow3Wish3"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/profileAllWishLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Your All Wishes"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileInfoLayout" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profileInfoLayout"
        android:layout_width="331dp"
        android:layout_height="122dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/profileLogOutButton"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/profileCountryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="18sp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/profileNameLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profileNameLabel" />

        <TextView
            android:id="@+id/profileNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/profileEditButton"
            style="@android:style/Widget.Holo.Light.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:minHeight="0dp"
            android:text="Edit Profile"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileCountryText" />

        <TextView
            android:id="@+id/profileNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recep Tayyip ErdoÄŸan"
            android:textSize="18sp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/profileCountryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czechoslovakia"
            android:textSize="18sp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/profileNameText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profileNameText" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/profileLogOutButton"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Log Out"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileSeeButton"
        style="@android:style/Widget.Holo.Light.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="See All Wishes"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
